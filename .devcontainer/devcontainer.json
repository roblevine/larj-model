// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Prolog Development Container",
	"build": {
		"dockerfile": "Dockerfile" 
	},

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"Anthropic.claude-code",
				"bierner.markdown-mermaid"
			]
		}
	},

	"initializeCommand": "sh -c 'if [ ! -f .devcontainer/.env_devcontainer ]; then cp .devcontainer/.env_devcontainer.example .devcontainer/.env_devcontainer; fi'",

	"runArgs": [
		"--name", "larjmodel_devcontainer",
		"--env-file", "${localWorkspaceFolder}/.devcontainer/.env_devcontainer"
	],

	"appPort": ["2204:22"],
	"postCreateCommand": "sh .devcontainer/installation.sh",
	"postStartCommand": "sh -c 'if [ \"${SSH_AUTOSTART_ON_DEVCONTAINER_START:-false}\" = \"true\" ]; then sudo service ssh start; fi'",
	"remoteUser": "vscode"
}